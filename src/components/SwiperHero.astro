---
import { Swiper, SwiperWrapper, SwiperSlide } from "astro-swiper";
import { fade } from "astro:transitions";
---

<Swiper
  options={{
    // check options at https://swiperjs.com/swiper-api
    autoplay: {
      delay: 5000,
      disableOnInteraction: false,
      waitForTransition: false,
    },
    loop: true,
    effect: "fade",
    fadeEffect: {
      crossFade: true,
    },
  }}
>
  <SwiperWrapper>
    <!-- Slides -->
    <SwiperSlide>
      <img src="/src/images/hero1.jpg" alt="" />
    </SwiperSlide>
    <SwiperSlide>
      <img src="/src/images/hero2.jpg" alt="" />
    </SwiperSlide>
    <SwiperSlide>
      <img src="/src/images/hero3.jpg" alt="" />
    </SwiperSlide>
    <SwiperSlide>
      <img src="/src/images/hero4.jpg" alt="" />
    </SwiperSlide>
    <SwiperSlide>
      <img src="/src/images/hero5.jpg" alt="" />
    </SwiperSlide>
    <SwiperSlide>
      <img src="/src/images/hero6.jpg" alt="" />
    </SwiperSlide>
    <SwiperSlide>
      <img src="/src/images/hero7.jpg" alt="" />
    </SwiperSlide>
    <SwiperSlide>
      <img src="/src/images/hero8.jpg" alt="" />
    </SwiperSlide>
  </SwiperWrapper>
</Swiper>

<style>
  .swiper {
    aspect-ratio: 16/9;
    width: 100%;
    height: 100%;
  }

  img {
    width: 100%;
    height: 100%;
  }
</style>
